<div class="form row">
  <div class="col-lg-10">
    <%= form_with  model: [:client, @event], local: true, :html => { :class => "form-horizontal thought" } do |form| %>
      <% if @event.errors.any? %>
        <div id="error_expl" class="panel panel-danger">
          <div class="panel-heading">
            <h3 class="panel-title"><%= pluralize(@thought.errors.count, "error") %> prohibited this thought from being saved:</h3>
          </div>
          <div class="panel-body">
            <ul>
            <% @event.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        </div>
      <% end %>
      <div class="form-group">
        <%= form.label :name, :class => 'control-label col-lg-2' %>
        <div class="col-lg-10">
          <%= form.text_field :name, name: 'event[name]',:class => 'form-control' %>
        </div>
        <%= form.error_span(:name) %>
      </div>
      <div class="form-group">
        <%= form.label :description, :class => 'control-label col-lg-2' %>
        <div class="col-lg-10">
          <%= form.text_area :description, name: 'event[description]',:class => 'form-control' %>
        </div>
        <%= form.error_span(:description) %>
      </div>
      <div class="form-group">
        <%= form.label :vacancies, :class => 'control-label col-lg-2' %>
        <div class="col-lg-10">
          <%= form.number_field :vacancies, name: 'event[vacancies]',:class => 'form-control' %>
        </div>
        <%= form.error_span(:vacancies) %>
      </div>

      <div class="form-group">
        <%= form.label :start_date, :class => 'control-label col-lg-2' %>
        <div class="col-lg-10">
          <%= form.text_field :start_date, name: 'event[start_date]',:class => 'form-control' %>
        </div>
        <%= form.error_span(:start_date) %>
      </div>

      <div class="form-group">
        <%= form.label :end_date, :class => 'control-label col-lg-2' %>
        <div class="col-lg-10">
          <%= form.text_field :end_date, name: 'event[end_date]',:class => 'form-control' %>
        </div>
        <%= form.error_span(:end_date) %>
      </div>

      <div class="form-group">
        <%= form.label :value, :class => 'control-label col-lg-2' %>
        <div class="col-lg-10">
          <%= form.text_field :value, name: 'event[value]',:class => 'form-control' %>
        </div>
        <%= form.error_span(:value) %>
      </div>
 
      <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
          <%= form.submit 'Save', :class => 'btn btn-primary' %>
          <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    :back, :class => 'btn btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
</div>