<div class="page-header">
  <h1>New Register <%= @event.name %> </h1>
</div>


<div class="form row">
  <div class="col-lg-10">
    <%= form_with  model: @register, local: true, :html => { :class => "form-horizontal event" } do |form| %>
      <% if @register.errors.any? %>
        <div id="error_expl" class="panel panel-danger">
          <div class="panel-heading">
            <h3 class="panel-title"><%= pluralize(@register.errors.count, "error") %> prohibited this register from being saved:</h3>
          </div>
          <div class="panel-body">
            <ul>
            <% @register.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        </div>
      <% end %>
      <%= form.hidden_field :event_id, event_id: 'register[event_id]',:class => 'form-control' %>
      <div class="form-group">
        <%= form.label :name, :class => 'control-label col-lg-2' %>
        <div class="col-lg-10">
          <%= form.text_field :name, name: 'register[name]',:class => 'form-control' %>
        </div>
        <%= form.error_span(:name) %>
      </div>

      <div class="form-group">
        <%= form.label :cpf, :class => 'control-label col-lg-2' %>
        <div class="col-lg-10">
          <%= form.text_field :cpf, cpf: 'register[cpf]',:class => 'form-control' %>
        </div>
        <%= form.error_span(:cpf) %>
      </div>

      <div class="form-group">
        <%= form.label :email, :class => 'control-label col-lg-2' %>
        <div class="col-lg-10">
          <%= form.text_field :email, email: 'register[email]',:class => 'form-control' %>
        </div>
        <%= form.error_span(:email) %>
      </div>

      <div class="form-group">
        <%= form.label :phone, :class => 'control-label col-lg-2' %>
        <div class="col-lg-10">
          <%= form.text_field :phone, phone: 'register[phone]',:class => 'form-control' %>
        </div>
        <%= form.error_span(:phone) %>
      </div>

      <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
          <%= form.submit 'Save', :class => 'btn btn-primary' %>
          <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    :back, :class => 'btn btn-default' %>
        </div>
      </div>

    <% end %>
  </div>
</div>